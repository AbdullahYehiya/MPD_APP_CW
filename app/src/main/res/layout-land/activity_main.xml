<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdullahyehiya.mpd_app_cw.MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/current_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/current_incidents_btn"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/plannedrw_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/current_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/planned_road_work_btn"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>
